<div class="sidebar">
    <ul class="main-menu">
        <%- partial('partials/main_menu') %>
    </ul>
    <div class="list">
        <% if (type === 'guide') { %>
        <h2>Руководство</h2>
        <% } else if (type === 'api') { %>
        <h2>Документация API</h2>
        <% } else if (type === 'examples') { %>
        <h2>Примеры</h2>
        <% } else { %>
        <h2><%- type.charAt(0).toUpperCase() + type.slice(1) %></h2>
        <% } %>
        <ul class="menu-root">
            <% site.pages.find({type: type}).sort('order').each(function (p) { %>
                <li>
                    <a href="/<%- p.path %>" class="sidebar-link<%- page.title === p.title ? ' current' : '' %><%- p.is_new ? ' new' : '' %>"><%- p.title %></a>
                </li>
            <% }) %>
            <li><a href="http://legacy.vuejs.org">Ищите документацию к 0.11?</a></li>
            <li style="margin:10px 0 3px">
              <script data-gittip-username="yyx990803"
                data-gittip-widget="button"
                src="//gttp.co/v1.js"></script>
            </li>
        </ul>
    </div>
</div>
